{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Register</div>
                    <div class="card-body">
                        <div class="form">
                            {{ form_start(registrationForm) }}
                            <div class="form-group row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.name, {'attr': {'class': 'form-control'}})}}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.email, {'attr': {label: 'Email', 'class': 'form-control'}})}}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.plainPassword.first, {label: 'Password', 'attr': {'class':'form-control'}})}}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.plainPassword.second, {label: 'Plain password', 'attr': {'class':'form-control'}})}}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    {{ form_row(registrationForm.agreeTerms, {label: 'Agree'}) }}
                                </div>
                            </div>
                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Register
                                </button>
                                <a href="{{ path('app_login') }}" class="btn btn-link">
                                    Login
                                </a>
                            </div>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</main>
{% endblock %}